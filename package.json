{
  "name": "react-native-spaceviewer",
  "version": "1.0.0",
  "main": "App.js",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "lint-ci": "eslint 'src/**/*.{js,jsx}' --quiet",
    "lint": "yarn lint-ci --fix",
    "postinstall": "sh scripts/postInstallHacks.sh",
    "appium": "appium",
    "run-android": "react-native run-android",
    "run-ios": "react-native run-ios --simulator 'iPhone 6s'",
    "test-ci": "jest --passWithNoTests",
    "test": "yarn test-ci --watch",
    "test-android-debug": "E2E_DEVICE=local_android_debug jest",
    "test-android-release": "E2E_DEVICE=local_android_release jest",
    "build-android-debug": "pushd android; ./gradlew assembleDebug; popd",
    "build-android-release": "pushd android; ./gradlew assembleRelease; popd",
    "test-ios-debug": "E2E_DEVICE=local_ios_debug jest",
    "test-ios-release": "E2E_DEVICE=local_ios_release jest",
    "build-ios-debug": "pushd ios; xcodebuild -UseModernBuildSystem=NO -scheme 'Space Viewer' -sdk iphonesimulator -configuration Debug -derivedDataPath build/app; rm app-debug.zip; zip -r app-debug.zip build/app/Build/Products/Debug-iphonesimulator/*.app; popd",
    "build-ios-release": "pushd ios; xcodebuild -UseModernBuildSystem=NO -scheme 'Space Viewer' -sdk iphonesimulator -configuration Release -derivedDataPath build/app; zip -r app-release.zip build/app/Build/Products/Release-iphonesimulator/*.app; popd"
  },
  "dependencies": {
    "flow": "^0.2.3",
    "moment": "^2.24.0",
    "native-base": "git://github.com/GeekyAnts/NativeBase.git",
    "react": "16.8.6",
    "react-native": "0.60.3",
    "react-native-code-push": "^5.6.0",
    "react-native-countdown-component": "^1.7.3",
    "react-native-fast-image": "^7.0.2",
    "react-native-google-static-map": "^0.1.13",
    "react-native-responsive-screen": "^1.2.1",
    "react-native-settings-list": "git://github.com/reime005/react-native-settings-list.git#expo",
    "react-native-vector-icons": "6.6.0",
    "react-navigation": "2.18.2",
    "react-navigation-redux-helpers": "2.0.8",
    "react-redux": "^5.1.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "venv": "^1.0.1",
    "wd": "^1.11.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/runtime": "^7.5.4",
    "@react-native-community/eslint-config": "0.0.5",
    "appium": "^1.14.0",
    "appium-doctor": "^1.11.1",
    "babel-jest": "23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react-native": "4.0.1",
    "detox": "^13.1.1",
    "eslint": "^6.0.1",
    "eslint-config-react-native-prettier": "^1.0.1",
    "eslint-plugin-flowtype": "^3.11.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-react-native": "^3.7.0",
    "eslint-plugin-redux-saga": "^1.0.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "metro-react-native-babel-preset": "^0.55.0",
    "react-test-renderer": "16.8.6"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/(test/unit/**/*.spec.(js|jsx|ts|tsx)|**/__test__/*.(js|jsx|ts|tsx))"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/app/Build/Products/Debug-iphonesimulator/Space Viewer.app",
        "build": "pushd ios; xcodebuild -UseModernBuildSystem=NO -scheme 'Space Viewer' -sdk iphonesimulator -configuration Debug -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone X"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "pushd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && popd",
        "type": "android.emulator",
        "name": "Nexus_5X_API_28_x86"
      }
    },
    "test-runner": "jest"
  }
}
