{
  "extends": ["react-native-prettier", "plugin:flowtype/recommended", "eslint:recommended"],
  "plugins": [
    "react-native",
    "flowtype",
    "react-hooks",
    "redux-saga"
  ],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "env": {"es6": true, "jest": false},
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "impliedStrict": true,
      "globalReturn": false,
      "jsx": true
    }
  },
  "globals": { "beforeEach": false, "jasmine": false, "afterAll": false, "beforeAll": false, "device": false, "element": false, "by": false, "jest": false, "fetch": false, "alert": false, "describe": false, "expect": false, "it": false, "XMLHttpRequest": false , "__DEV__": false },
  "rules": {
    "no-var": "warn",
    "no-console": "warn",
    "strict": "error",
    "comma-dangle": "off",
    "no-alert": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-unused-vars": "warn",
  }
}
